@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<div class="row mt-4">
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>Orders</h4>
                        <h5>Manage Orders</h5>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clipboard-list fa-2x"></i>
                    </div>
                </div>
                <a href="@Url.Action("Orders", "Admin")" class="btn btn-light w-100 mt-3">View Orders</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>Users</h4>
                        <h5>Manage Users</h5>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
                <a href="@Url.Action("Users", "Admin")" class="btn btn-light w-100 mt-3">View Users</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>Products</h4>
                        <h5>Manage Products</h5>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-boxes fa-2x"></i>
                    </div>
                </div>
                <a href="@Url.Action("Products", "Admin")" class="btn btn-light w-100 mt-3">View Products</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>Storage</h4>
                        <h5>Azure Storage</h5>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-database fa-2x"></i>
                    </div>
                </div>
                <a href="@Url.Action("Customers", "Storage")" class="btn btn-light w-100 mt-3">Storage Management</a>
            </div>
        </div>
    </div>
</div>